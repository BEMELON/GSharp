<local:NumberBlock x:Class="GSharp.Graphic.Objects.PlusBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GSharp.Graphic.Objects"
             xmlns:core="clr-namespace:GSharp.Graphic.Core"
             xmlns:hole="clr-namespace:GSharp.Graphic.Holes"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300" HorizontalAlignment="Left" VerticalAlignment="Top">
    <Border CornerRadius="2" Padding="3" Background="White" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="#D5404D" BorderThickness="1">
        <StackPanel Orientation="Horizontal">
            <hole:NumberHole x:Name="NumberHole1" VerticalAlignment="Center" />
            <TextBlock VerticalAlignment="Center" Margin="3,0">+</TextBlock>
            <hole:NumberHole x:Name="NumberHole2" VerticalAlignment="Center" />
        </StackPanel>
    </Border>
</local:NumberBlock>
