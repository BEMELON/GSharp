<local:BaseStatementHole x:Class="GSharp.Graphic.Holes.NextConnectHole"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GSharp.Graphic.Holes"
             mc:Ignorable="d" d:DesignWidth="300" SnapsToDevicePixels="True" Foreground="White"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    
    <StackPanel Orientation="Vertical" VerticalAlignment="Top">
        <Grid Height="10">
            <DockPanel ClipToBounds="True">
                <Path Data="M -2,-2 L -2,9.5 10,9.5 18,2 26,9.5 28,9.5 28,-2 Z" Height="10" StrokeThickness="1" StrokeLineJoin="Round" Margin="0,0,-2,0" Stroke="{Binding BorderColor}" Fill="{Binding BodyColor}" />
                <Border Background="{Binding BodyColor}" BorderBrush="{Binding BorderColor}" VerticalAlignment="Top" Height="10" BorderThickness="0,0,0,1" />
            </DockPanel>
        </Grid>
        <Border x:Name="BlockHole" Margin="-5,-10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </StackPanel>
</local:BaseStatementHole>
